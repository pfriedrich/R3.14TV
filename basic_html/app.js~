$(function(){
  //bind library to gesture pad
  console.log("runing")
  logEvent = function(e){
      console.log(e.type);
      if(e.target.id=="music_selector" && e.type=="swipeRight")
      {console.log('swiperight');
        $("#music").addClass("selected");
        $("#movie").remove();
        //$("#gesture-pad").removeClass("swiped-left");
      }
      if(e.target.id=="movie_selector" && e.type=="swipeLeft")
      {console.log('swipeleft');
        $("#music").remove();
        $("#movie").addClass("selected");
        //$("#gesture-pad").removeClass("swiped-right");
      }
    };
    var events = ["swipeLeft","swipeRight"];
    for(var i = 0;i<events.length;i++){
      $$(".icon").on(events[i], logEvent);
    }
    $$(".icon").on("touchstart",function(e){
      e.preventDefault();
    });
    return false;
});
